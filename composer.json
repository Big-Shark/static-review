{
    "name": "sjparkinson/static-review",

    "description": "An extendable framework for version control hooks.",

    "license": "MIT",

    "authors": [
        {
            "name": "Samuel Parkinson",
            "email": "sam.james.parkinson@gmail.com",
            "homepage": "http://samp.im"
        }
    ],

    "autoload": {
        "psr-4": {
            "MainThread\\StaticReview\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "MainThread\\StaticReview\\Test\\Behavorial\\": "test/behavorial/src/",
            "MainThread\\StaticReview\\Test\\Unit\\": "test/unit/src/"
        }
    },

    "require": {
        "php": "~5.5",
        "psr/log": "~1.0",
        "symfony/process": "~2.0",
        "symfony/console": "~2.0"
    },

    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~2.0",
        "leaphub/phpcs-symfony2-standard": "dev-master",
        "behat/behat": "~3.0"
    },

    "scripts": {
        "test": [
            "composer run-script lint",
            "composer run-script test:unit",
            "composer run-script test:behavorial"
        ],

        "test:unit": [
            "vendor/bin/phpunit --configuration test/phpunit.xml.dist --testsuite unit"
        ],

        "test:behavorial": [
            "vendor/bin/behat --config test/behat.yml"
        ],

        "lint": [
            "vendor/bin/phpcs --standard=vendor/leaphub/phpcs-symfony2-standard/leaphub/phpcs/Symfony2/ src/ tes/"
        ]
    }
}
