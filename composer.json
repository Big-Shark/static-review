{
    "name": "sjparkinson/static-review",

    "description": "An extendable framework for version control hooks.",

    "license": "MIT",

    "authors": [
        {
            "name": "Samuel Parkinson",
            "email": "sam.james.parkinson@gmail.com",
            "homepage": "http://samp.im"
        }
    ],

    "autoload": {
        "psr-4": {
            "MainThread\\StaticReview\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "MainThread\\StaticReview\\Test\\": "test/src/"
        }
    },

    "require": {
        "php": "~5.5",
        "illuminate/container": "~5.0",
        "symfony/console": "~2.0",
        "symfony/process": "~2.0",
        "symfony/yaml": "~2.0"
    },

    "require-dev": {
        "behat/behat": "~3.0",
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "~2.0",
        "leaphub/phpcs-symfony2-standard": "dev-master",
        "mockery/mockery": "0.9.*"
    },

    "scripts": {
        "test": [
            "composer run-script --quiet lint",
            "composer run-script --quiet test:unit",
            "composer run-script --quiet test:functional",
            "composer run-script --quiet test:features"
        ],

        "test:unit": [
            "vendor/bin/phpunit --colors=always --testsuite unit"
        ],

        "test:functional": [
            "vendor/bin/phpunit --colors=always --testsuite functional"
        ],

        "test:features": [
            "vendor/bin/behat --colors"
        ],

        "lint": [
            "vendor/bin/phpcs --colors --standard=vendor/leaphub/phpcs-symfony2-standard/leaphub/phpcs/Symfony2/ -p src/ test/"
        ]
    }
}
